@page
@model hakimslivs.Pages.Admin.RoleManager.IndexModel

@{
    ViewData["Title"] = "Role Manager";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Role Manager</h1>
<form method="post">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label asp-for="Role.Name" class="control-label"></label>
        <input asp-for="Role.Name" class="form-control" />
        <span asp-validation-for="Role.Name" class="text-danger"></span>
        <span class="input-group-btn">
            <button class="btn btn-info">Add New Role</button>
        </span>
    </div>
</form>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>

        }
    </tbody>
</table>