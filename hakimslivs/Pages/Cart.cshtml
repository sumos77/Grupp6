@page
@using hakimslivs.Models
@model hakimslivs.Pages.IndexModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Varukorgen";
}


<div class="row d-flex justify-content-center my-4">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">@ViewData["Title"]</h5>
            </div>
            @foreach (var item in Model.Items)
            {
                <div class="card-body">
                    <!-- Single item -->
                <div class="row">
                        <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                            <!-- Image -->
                        <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                <img src="@item.ImageURL"
                                 class="w-100" alt="@item.Product" />
                                <a href="#!">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                </a>
                            </div>
                            <!-- Image -->
                    </div>

                        <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                            <!-- Data -->
                        <p><strong>@item.Product</strong></p>
                            <p>@item.Description</p>

                            <button type="button" class="btn btn-danger btn-sm me-1 mb-2" data-mdb-toggle="tooltip"
                                title="Remove item">
                                <i class="fas fa-trash"></i>
                            </button>
                            <!-- Data -->
                    </div>

                        <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                            <!-- Quantity -->
                        <div class="d-flex mb-4" style="max-width: 300px">
                                <button class="btn btn-primary px-3 me-2"
                                    onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                    <i class="fas fa-minus"></i>
                                </button>

                                <div class="form-outline">
                                    <input id="form1" min="0" name="quantity" value="1" type="number" class="form-control" />
                                </div>

                                <button class="btn btn-primary px-3 ms-2"
                                    onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                            <!-- Quantity -->
                            <!-- Price -->
                        <p class="text-start text-md-center">
                                <strong>@item.Price kr</strong>
                            </p>
                            <!-- Price -->
                    </div>
                    </div>
                    <!-- Single item -->

                <hr class="my-4" />
                </div>

            }

        </div>

    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Order</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                        Summa varor
                        <span>1234 kr</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                        Leverans
                        <span>Gratis</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                        <div>
                            <strong>Totalsumma</strong>
                        </div>
                        <span><strong>1234 kr</strong></span>
                    </li>
                </ul>

                @if (SignInManager.IsSignedIn(User))
                {
                    <a asp-page="/Checkout/Index" type="button" class="btn btn-primary btn-lg btn-block">
                        Beställ
                    </a>
                }
                else
                {
                    <button type="button" class="btn btn-primary btn-lg btn-block" disabled="disabled" >
                        Beställ
                    </button>
                    <p class="na text-center">Du måste vara inloggad för att beställa</p>
                }
                
                

            </div>
            <div class="text-center">
                <a asp-page="./Index">Tillbaka till Shoppingen</a>
            </div>
            
        </div>
    </div>
</div>
